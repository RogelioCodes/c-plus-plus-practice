#include<iostream>
#include<iomanip>
using namespace std;

int main()
{
  double age, years ;
 



  cout << "How old are you: ";
  cin >> age ;
  

    
  if (age > 0 && age < 17)
    {
      years = (17-age) ;
      cout << "Sorry you need to wait " << years << " more years." << endl ;
    }
  if ( age >= 17 && age <= 42)
    {
      cout << "The military is hiring people like you." << endl;
    }
  if (age>42)
    {
      cout << "Thank you for using the system" << endl;
    }
  else if( age < 0 )
    { 
      cout << "Invalid age" << endl ; 
    }
  return 0;
}
