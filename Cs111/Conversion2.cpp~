//This program will convert a length in inches to yards, feet, and inches.
#include <iostream>
using namespace std;
int main()

{
  const double inchCent  = 2.54 ;
  ;
  double length, inches, centimeters, feet ;
  // please input a length in inches
  cout << "***************************************************************************" << endl;
  cout << "This program will convert a length in centimeters to yards, feet, and inches." << endl; 
  cout << "*****************************************************************************" << endl; 
  cout << "Enter centimeters: " ;
  cin >> centimeters ;
 
  inches = centimeters / inchCent;
  
  double round = (int)(inches + 0.5);


  cout << centimeters << " " << "centimeters is " << inches << " " << "inches. Rounded to " << round << endl; 
  return 0 ;
}

