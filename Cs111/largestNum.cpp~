#include <iostream>
using namespace std;

int main()
{
  int n1, n2, n3, n4, largest;

  cout << "Enter four numbers: ";
  cin >> n1 >> n2 >> n3 >> n4;

  if (n1 >= n2)
    {
      largest = n1 ;
    }
    
  else  if ( n2 >= n1 )
    {
      largest = n2 ;
    }

  if(n2 >= n3)
    {
      largest = n2 ;
    }
  else if (n3>= n2)
    {
      largest = n3;
    }

  if(n3 >= n4)
    {
      largest = n3 ;
    }
  else if (n4>= n3)
    {
      largest = n4;
    }
   
    
  cout << "largest: " << largest << endl ; 
  return 0 ;
}
